{% extends 'base.html.twig' %}

{% block title %}Liste des clients | Euro CCVP Manage{% endblock %}

{% block body %}

    <div class="d-flex">
        <h1>Liste des clients</h1>
    </div>

    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nom</th>
            <th scope="col">Description</th>
        </tr>
        </thead>
        <tbody>
        {% for c in Clients %}
        <tr>
            <th scope="row">{{ c.id }}</th>
            <td><a href="{{ url('clientShow', {'id': c.id}) }}">{{ c.name }}</a></td>
            <td>{{ c.description }}</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
